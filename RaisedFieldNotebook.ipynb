def train_model():
    # Training parameters
    EPOCHS = 120
    
    # Initialize and train model
    model = YOLO('yolov8n.pt')
    model.train(
        data=DATA_YAML,
        epochs=EPOCHS,
        imgsz=640,
        batch=8,
        name='yolov8_raised_fields',
        project=OUTPUT_PATH  # Explicitly set the project directory
    )
    
    return model

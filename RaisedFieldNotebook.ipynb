def imgGrid(folder):
    results = [os.path.join(folder, i) for i in os.listdir(folder)]
    fig = plt.figure(figsize=(20, 20))
    grid = ImageGrid(fig, 111, nrows_ncols=(4, 4), axes_pad=0.1)
    images = random.choices(results, k=16)
    
    for ax, im in zip(grid, images):
        im = plt.imread(im)
        ax.imshow(im)
        ax.grid(False)
        ax.axis('off')
    
    plt.show()
